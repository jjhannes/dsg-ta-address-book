@model LoginViewModel

<div class="row">

    <div class="col-sm-1 col-md-2 col-lg-3"></div>

    <div class="col-sm-10 col-md-8 col-lg-6">

        <h3 class="mt-5">Log in</h3>

        <p class="lead">

            Please log in to continue using the Address Book

        </p>

        <form method="post" enctype="multipart/form-data"
            asp-controller="Login"
            asp-action="Authenticate">

            <div class="d-flex justify-content-sm-center mb-3 row">

                <label for="loginEmail" class="col-sm-2 col-form-label">
        
                    Email
        
                </label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" value="@Model.Email" id="loginEmail" name="Email">

                </div>

            </div>

            <div class="d-flex justify-content-sm-center mb-3 row">

                <label for="loginPassword" class="col-sm-2 col-form-label">
        
                    Password
        
                </label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" value="@Model.Password" id="loginPassword" name="Password">

                </div>

            </div>

            <div class="d-flex justify-content-sm-center mb-3 row">

                <div class="col-sm-6">

                    <button class="btn btn-outline-primary me-auto" type="submit">
            
                        Log in

                    </button>

                </div>

            </div>

        </form>

    </div>

    <div class="col-sm-1 col-md-2 col-lg-3"></div>

</div>